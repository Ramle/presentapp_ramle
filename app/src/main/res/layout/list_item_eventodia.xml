<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_marginTop="15dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_evento"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="26dp"
        android:text="Evento"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_tipoevento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_evento"
        android:layout_below="@+id/tv_fechaevento"
        android:layout_marginTop="11dp"
        android:text="TipoEvento" />

    <TextView
        android:id="@+id/tv_fechaevento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_evento"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:text="Fecha"
        android:textColor="?android:attr/colorForeground"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_horaevento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_tipoevento"
        android:layout_alignBottom="@+id/tv_tipoevento"
        android:layout_alignEnd="@+id/tv_fechaevento"
        android:text="Hora" />



</RelativeLayout>